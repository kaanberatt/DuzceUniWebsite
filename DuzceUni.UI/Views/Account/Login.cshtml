<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Admin Sayfasına Giriş</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form asp-action="Login" asp-controller="Account" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">E-Mail Adresiniz</label>
                        <input type="email" class="form-control" name="AdminMail" id="exampleInputEmail1"
                               aria-describedby="emailHelp" placeholder="Mail Adresinizi Giriniz" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifreniz</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" name="AdminPassword"
                               placeholder="Şifre Giriniz" required="">
                    </div>                                       
                    <div>
                        <label>@if(ViewBag.Message != null)
                            {
                                @ViewBag.Message;
                            }
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                </form>
            </div>
        </div>
    </div>
</section>
