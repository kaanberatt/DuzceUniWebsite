@using DuzceUni.Entity.Concrete
@model IEnumerable<Announcement>



<section class="main-content-w3layouts-agileits">
   
    <div class="container">
        <h2 class="tittle text-md-center">Duyuru Listesi</h2>
        <table class="table table-bordered form-group">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Duyuru Başlığı</th>
                    <th scope="col">Tarihi</th>
                    <th scope="col">Durumu</th>
                    <th scope="col">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.AnnouncementTitle</td>
                        <td>@item.CreateDate</td>

                        @if (item.BlogStatus)
                        {
                            <td>Aktif</td>
                        }
                        else
                        {
                            <td>Pasif</td>
                        }
                        <td>
                            <a type="button" asp-controller="Announcement" asp-action="AnnouncementEdit" asp-route-id="@item.Id" class="btn btn-primary">Düzenle</a>
                            <a type="button" asp-controller="Announcement" asp-action="AnnouncementDelete" asp-route-id="@item.Id" class="btn btn-dark">Sil</a>
                        </td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <td colspan="5" class="text-md-center">Hiç Duyuru yok</td>
                }
            </tbody>
        </table>
    </div>
</section>